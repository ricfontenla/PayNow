<!DOCTYPE html>
<html>
  <head>
    <title>Paynow</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href=<%= root_path %>>Paynow</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href=<%= root_path %>>Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href=<%= admin_companies_path %>>Clientes</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href=<%= admin_payment_methods_path %>>Métodos de Pagamento</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href=<%= destroy_admin_session_path %> data-method=delete>Sair</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <p>Olá, <%= current_admin.email %></p>

    <%if notice %>
      <div class="alert alert-success" role="alert">
        <%= notice %>
      </div>
    <% end %>
    <%if alert %>
      <div class="alert alert-danger" role="alert">
        <%= alert %>
      </div>
    <% end %>

    <div class="container">
      <br/>
      <%= yield %>
    </div>
  </body>
</html>

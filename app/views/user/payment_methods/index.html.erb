<h1><%= t('.title') %></h1>
<hr class="my-4">

<% if @payment_methods.any? %>
  <div class="row">
    <% @payment_methods.each do |payment_method| %>
      <div class="card" style="width: 18rem;">
        <div class="card-header">
          <%= image_tag payment_method.category_icon, size: '50' %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= link_to payment_method.name, user_company_payment_method_path(@company.token, payment_method) %></h5>
        </div>
      </div>
    <% end %>  
  </div>
<% else %>
  <p>Nenhum m√©todo de pagamento ativo</p>
<%end%>
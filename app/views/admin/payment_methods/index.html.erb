<h1><%= t('.title') %></h1>
<hr class="my-4">

<h3>Métodos Cadastrados:</h3>
<% if @payment_methods.any? %>
  <div class="card" style="width: 18rem;">

    <% @payment_methods.each do |payment_method| %>
      <% if payment_method.category_icon.attached? %>
        <%= image_tag payment_method.category_icon %>
      <% end %>

      <div class="card-body">
        <h5 class="card-title"><%= link_to payment_method.name, [:admin, payment_method] %></h5>
        <p class="card-text"><b>Status:</b> <%= payment_method.active ? 'Ativo' : 'Inativo' %></p>
      </div>
    <% end %>  

  </div>
<% else %>
  <p>Nenhum método cadastrado.</p>
<% end %>

<h1><%= t('.title') %></h1>
<hr class="my-4">

<div>
  <% if @company.errors.any? %>
    <p>Foram encontrados <%= @company.errors.count %> error(s): </p>
    <ul>
      <% @company.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model: [:admin, @company] do |form| %>
  <dl>
    <dt><%= form.label :name %></dt>
    <dd><%= form.text_field :name %></dd>

    <dt><%= form.label :cnpj %></dt>
    <em>(14 d√≠gitos)</em>
    <dd><%= form.number_field :cnpj %></dd>

    <dt><%= form.label :billing_adress %></dt>
    <dd><%= form.text_area :billing_adress %></dd>

    <dt><%= form.label :billing_email %></dt>
    <dd><%= form.text_field :billing_email %></dd>
  </dl>
  <%= form.submit t('.submit'), class: 'btn btn-dark' %>
<% end %>

<div class="py-3">
  <%= link_to 'Cancelar', [:admin, @company], class: 'btn btn-dark'%>
</div>